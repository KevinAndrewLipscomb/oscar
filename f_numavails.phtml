      .  "    + if(n25='$marker',1,0) "
      .  "    + if(n26='$marker',1,0) "
      .  "    + if(n27='$marker',1,0) "
      .  "    + if(n28='$marker',1,0) "
      .  "    + if(n29='$marker',1,0) "
      .  "    + if(n30='$marker',1,0) "
      .  "    + if(n31='$marker',1,0) "
      .  "    as per_person_num_avails "
      .  " from aggregated left join " . $mode . "avail_sheet "
      .  "    using (last_name, first_name, timestamp)"
      .  " where month='$month_abbrev' "
      .  "    and coord_agency='$coord_agency' "
      )
      or die("Per_person_num_avails query failed with error:  " . mysql_error());
   //
   extract(mysql_fetch_array(mysql_query("select count(*)>0 as be_nonempty from shift_avail_count")));  // Sets $be_nonempty
   if ($be_nonempty)
      {
      $result = mysql_query("select sum(per_person_num_avails) as num_avails from shift_avail_count")
         or die("NumAvails query failed with error:  " . mysql_error());
      //
      if (mysql_num_rows($result)) extract(mysql_fetch_array($result));
      }
   //
   error_reporting($saved_error_level);
   return $num_avails;
   }
