function PutLibPhotoRandomPlaced
   (
   $placement,
   $limit = "",
   $align = ""
   )
   {
   //
   // Connect to the database.
   //
   $conn = mysql_connect("localhost","kalipso",Password());
   mysql_select_db("kalipso");
   //
   // Create the SQL statement
   //
   $sql = "select div_spec,frame_num from photo_detail where placement like '%$placement%' order by rand()";
   if ($limit != "") $sql = $sql . " limit $limit";
   //
   // Execute the statement
   //
   $result_set = mysql_query($sql) or die(mysql_error());
   //
   // Check how many rows were returned
   //
   $rows = mysql_num_rows($result_set);
   if ((!$result_set) || ($rows == 0))
      {
      echo "<br><b>Could not find any such photographs.</b><br>";
      }
   else
      {
      //
      while ($field_array = mysql_fetch_array($result_set))
         {
         extract($field_array);
            //
            // This sets up the $div_spec and $frame_num variables.
            //
         $image_source_spec = "http://kalipso.phpwebhosting.com/photolib/div/$div_spec/$frame_num-i.jpg";
         echo "<a href=\"http://kalipso.phpwebhosting.com/photolib/present-photo.phtml?div_spec=$div_spec&frame_num=$frame_num\">\n";
         $size = @GetImageSize("$image_source_spec");
         echo "   <img border=\"2\" src=$image_source_spec $size[3] align=$align>\n";
         echo "</a>\n";
         }
      }
   }
