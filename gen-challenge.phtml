   $challenge .= "Found $num_rows ";
   if ($num_rows == 1)
      {
      $challenge .= "record.\n\n";
      }
   else
      {
      $challenge .= "records.\n\n";
      }
   if ($num_rows)
      {
      $record_index = 0;
      while ($row = mysql_fetch_array($result))
         {
         $record_index++;
         extract($row);
         $challenge .= sShowAvailSheetRecDetail
            (
            $timestamp,
            $first_name,
            $last_name,
            $email_addr,
            $squad,
            $month,
            $be_on_team_5,
