function RoleEmailAddress
   (
   $role = "",
   $mode = ""
   )
   {
   $saved_error_level = error_reporting(E_ALL);
   //
   $email_addr = "";
   if ($role == "") $role = "sysadmin";
   //
   $result = mysql_query
      (
      "select email_addr from oscar." . $mode . "authority "
      .  "   where role='$role' limit 1"
      )
      or die("RoleEmailAddress query failed with error:  " . mysql_error());
   //
   if (mysql_num_rows($result)) extract(mysql_fetch_array($result));
   //
   error_reporting($saved_error_level);
   return $email_addr;
   }
